              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"productId\": \"uuid\",\n      \"productName\": \"Product Name\",\n      \"quantity\": 2,\n      \"unitPrice\": 9.99,\n      \"total\": 19.98\n    }\n  ],\n  \"subtotal\": 19.98,\n  \"discountType\": \"percentage\",\n  \"discountValue\": 10,\n  \"discountAmount\": 2.00,\n  \"total\": 17.98,\n  \"cashierId\": \"uuid\",\n  \"cashierName\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/sales",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sales"]
            }
          }
        },
        {
          "name": "Get All Sales",
          "request": {
            "method": "GET",
            "header": [],
